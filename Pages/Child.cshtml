@page
@model Assignment.Pages.ChildModel
@{
    ViewData["Title"] = "My Children";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 mb-5 bg-white rounded">
        <div class="card-body">
            <h2 class="text-center">My Children</h2>

            <!-- Error Message -->
            @if (ViewData["ErrorMessage"] != null)
            {
                <p class="text-danger">@ViewData["ErrorMessage"]</p>
            }

            <!-- Children List -->
            @if (Model.Children != null && Model.Children.Count > 0)
            {
                <ul>
                    @foreach (var child in Model.Children)
                    {
                        <li>@child.FullName - @child.Email</li>
                    }
                </ul>
            }
            else
            {
                <p>No children found.</p>
            }

            <!-- Link Child Button -->
            <p>
                If you want to link more children,
                <a class="btn btn-primary" href="/LinkChild">Click here to link your child</a>
            </p>

            <!-- Back to Index Button -->
            <a asp-page="/Index" class="btn btn-secondary mt-3">Back to Index</a>
        </div>
    </div>
</div>

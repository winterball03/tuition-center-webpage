@page "{id:int?}"
@model Assignment.Pages.DeleteStudentModel
@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <h2 class="text-center text-danger">Delete Student</h2>

            @if (Model.Student != null && Model.Student.User != null)
            {
                <p>Are you sure you want to delete this student and the associated user?</p>
                <p><strong>Full Name:</strong> @Model.Student.FullName</p>
                <p><strong>Email:</strong> @Model.Student.Email</p>
                <p><strong>Username:</strong> @Model.Student.User.UserName</p>
                <p><strong>Phone Number:</strong> @Model.Student.User.PhoneNumber</p>

                <form method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-page="/Student" class="btn btn-secondary mt-3">Cancel</a>
                </form>
            }
            else
            {
                <p class="text-danger">Student not found.</p>
            }
        </div>
    </div>
</div>

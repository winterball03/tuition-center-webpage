@page
@model Assignment.Pages.AnnouncementFolder.EditAnnouncementModel
@{
    ViewData["Title"] = "Edit Announcement";
}

<div class="container mt-5">
    <h2 class="text-center">Edit Announcement</h2>

    <form method="post">
        <input type="hidden" asp-for="Announcement.AnnouncementId" />

        <div class="form-group">
            <label asp-for="Announcement.Title"></label>
            <input asp-for="Announcement.Title" class="form-control" />
            <span asp-validation-for="Announcement.Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Announcement.Content"></label>
            <textarea asp-for="Announcement.Content" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Announcement.Content" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="AnnouncementDetails" class="btn btn-secondary">Back to Announcements</a>
    </form>
</div>

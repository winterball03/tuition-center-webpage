@page
@model Assignment.Pages.DeleteTeacherModel
@{
    ViewData["Title"] = "Delete Teacher";
}

<h2>Delete Teacher</h2>

<h3>Are you sure you want to delete this teacher?</h3>
<div>
    <h4>@Model.Teacher.FullName</h4>
    <p>Subject: @Model.Teacher.Subject</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Teacher.TeacherId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Teacher" class="btn btn-secondary">Cancel</a>
</form>

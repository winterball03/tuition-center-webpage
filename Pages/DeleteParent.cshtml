@page "{id:int?}"
@model Assignment.Pages.DeleteParentModel
@{
    ViewData["Title"] = "Delete Parent";
}

<div class="container mt-5">
    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body">
            <h2 class="text-center text-danger">Delete Parent</h2>

            @if (Model.Parent != null && Model.Parent.User != null)
            {
                <p>Are you sure you want to delete this parent and the associated user?</p>
                <p><strong>Full Name:</strong> @Model.Parent.FullName</p>
                <p><strong>Email:</strong> @Model.Parent.Email</p>
                <p><strong>Username:</strong> @Model.Parent.User.UserName</p>
                <p><strong>Phone Number:</strong> @Model.Parent.User.PhoneNumber</p>

                <form method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-page="/ParentList" class="btn btn-secondary">Cancel</a>
                </form>
            }
            else
            {
                <p class="text-danger">Parent not found.</p>
            }
        </div>
    </div>
</div>

